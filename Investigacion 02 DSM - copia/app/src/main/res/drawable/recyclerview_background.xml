<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del RecyclerView -->
    <solid android:color="@color/recyclerview_background"/>

    <!-- Bordes redondeados -->
    <corners android:radius="12dp"/>

    <!-- Sombra o borde -->
    <stroke android:width="2dp" android:color="@color/stroke_color"/>

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
